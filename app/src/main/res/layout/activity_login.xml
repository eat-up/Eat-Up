<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eatup.android.eatup.LoginActivity"
    android:background="@drawable/bkg_gradient">

    <TextView
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:background="@drawable/txt_welcometoeatup"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_marginTop="93dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/meetneat"
        android:id="@+id/tvMeetnEat"
        android:textStyle="bold"
        android:textColor="#fc313131"
        android:textSize="26dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />


    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:onClick="loginToRest"
        android:background="@drawable/btn_loginwlinkedin"
        android:layout_below="@+id/tvMeetnEat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />




</RelativeLayout>
