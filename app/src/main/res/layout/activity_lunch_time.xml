<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eatup.android.eatup.LunchTimeActivity"
    android:background="@drawable/bkg_gradient">


    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:id="@+id/tvReadyToEat"
        android:background="@drawable/txt_readyeatup"
        android:textColor="#ffff00"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:textSize="40sp"
        android:typeface="sans"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btYes"
        android:background="@drawable/btn_yes"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/tvSelect"
        android:layout_alignLeft="@+id/btNotToday"
        android:layout_alignStart="@+id/btNotToday" />


    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_nottoday"
        android:id="@+id/btNotToday"
        android:layout_below="@+id/btYes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select"
        android:id="@+id/tvSelect"
        android:textStyle="bold"
        android:textColor="#fc313131"
        android:textSize="24dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/tvReadyToEat"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#ffffff"
        android:id="@+id/tvGPSloc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="proceed to chat"
        android:id="@+id/btnChat"
        android:layout_below="@+id/btNotToday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:onClick="loginToChat"/>
</RelativeLayout>
