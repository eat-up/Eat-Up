<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eatup.android.eatup.LunchTimeActivity"
    android:background="@drawable/bkg_gradient">




    <TextView
        android:layout_width="320dp"
        android:layout_height="65dp"
        android:id="@+id/tvReadyToEat"
        android:background="@drawable/txt_readytoeatup"
        android:textColor="#ffff00"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:textSize="40sp"
        android:typeface="sans"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btYes"
        android:background="@drawable/button_yes"
        android:layout_below="@+id/tvReadyToEat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />


    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/button_nottoday"
        android:id="@+id/btNotToday"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/btYes"
        android:layout_alignLeft="@+id/btYes"
        android:layout_alignStart="@+id/btYes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvGPSloc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
